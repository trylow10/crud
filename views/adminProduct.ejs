<!-- adminProducts.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>All Products</title>
  <link rel="stylesheet" href="/css/style.css">

</head>
<body>
  <h1>Admin Products</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((product) => { %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td class="actions">
            <!-- <a href="/api/products/edit/<%= product.id %>/edit">Edit</a> -->
            <a href="/api/products/updateproduct/<%= product.id %>">Edit</a>
            <form action="/api/products/<%= product.id %>" method="POST" style="display: inline;">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
      <a href="/api/products/addproduct">Add Product</a>
    </tbody>
  </table>
</body>
</html>
